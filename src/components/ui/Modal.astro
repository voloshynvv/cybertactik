---
import CloseIcon from "@assets/icons/close.svg";

interface Props {
  dialogId: string;
}

const { dialogId, ...props } = Astro.props;
---

<!-- transition: all 0.7s allow-discrete; -->
<dialog class="m-auto max-w-5xl" id={dialogId} closedby="any" {...props}>
  <button
    class="absolute top-0 right-0 z-10 inline-flex size-12 items-center justify-center"
    id="close-modal"
    autofocus
    aria-label="close"
  >
    <CloseIcon aria-hidden />
  </button>

  <slot />
</dialog>

<style>
  dialog:open {
    opacity: 1;
    translate: 0;
  }

  dialog {
    opacity: 0;
    translate: 0 10px;
    transition: all 0.25s allow-discrete;
  }

  /* Before open state  */
  /* Needs to be after the previous dialog:open rule to take effect,
    as the specificity is the same */
  @starting-style {
    dialog:open {
      opacity: 0;
      translate: 0 10px;
    }
  }

  /* Transition the :backdrop when the dialog modal is promoted to the top layer */
  dialog::backdrop {
    transition: all 0.35s allow-discrete;
  }

  dialog:open::backdrop {
    background-color: --alpha(var(--color-black) / 50%);
  }
</style>
