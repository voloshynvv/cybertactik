<button id="open-dialog">Open Video</button>

<dialog
  class="dialog open:animate-fade-in w-[90vw] max-w-4xl scale-95 rounded-xl border-0 p-0 opacity-0 transition-all duration-300 backdrop:bg-black/50 open:scale-100"
>
  <div class="overflow-hidden rounded-xl bg-white shadow-lg">
    <video controls class="h-auto w-full">
      <source src="/video.mp4" type="video/mp4" />
      Your browser does not support the video tag.
    </video>

    <div class="flex justify-end p-4">
      <button
        id="close-dialog"
        class="rounded bg-gray-300 px-3 py-1 transition hover:bg-gray-400"
      >
        Close
      </button>
    </div>
  </div>
</dialog>

<script>
  const dialog = document.querySelector(".dialog") as HTMLDialogElement;

  const openButton = document.querySelector(
    ".open-button",
  ) as HTMLButtonElement;

  const closeButton = document.querySelector(
    ".close-button",
  ) as HTMLButtonElement;

  openButton.addEventListener("click", () => {
    dialog.showModal();
  });

  closeButton.addEventListener("click", () => {
    dialog.classList.add("opacity-0", "scale-95");

    setTimeout(() => {
      dialog.classList.remove("opacity-0", "scale-95");
      dialog.close();
    }, 200);
  });
</script>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  dialog[open] {
    animation: fade-in 0.3s ease-out forwards;
  }
</style>
