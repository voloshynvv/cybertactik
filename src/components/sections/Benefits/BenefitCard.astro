---
const { title, description, num, imageSrc } = Astro.props;

import ArrowIcon from "@assets/icons/arrow.svg";
---

<article
  class="card flex shrink-0 flex-col gap-4 lg:flex-row lg:items-center lg:gap-12"
>
  <p class="max-w-[18rem] text-lg lg:-mt-[10.25rem] lg:text-[1.375rem]/9.5">
    {description}
  </p>

  <div class="relative w-xs md:w-md lg:w-[46.25rem]">
    <img src={imageSrc} width="740" height="540" alt="" />

    <div
      class="mx-4 flex -translate-y-1/2 flex-col rounded-3xl border border-neutral-500 bg-neutral-700 p-6 lg:ml-auto lg:min-h-[21.25rem] lg:w-[73%] lg:p-8"
    >
      <p class="text-primary mb-6 text-lg font-bold">{num}/</p>

      <h3 class="mb-6 flex-1 text-xl text-white lg:text-[1.875rem]">
        {title}
      </h3>

      <a
        href="#"
        class="bg-primary inline-flex size-10 items-center justify-center rounded-full lg:size-[4.375rem]"
      >
        <ArrowIcon class="-rotate-45" />

        <span class="sr-only"> Read more about {title}</span>
      </a>
    </div>
  </div>
</article>
